# Example environment variables for the Claude MCP Scaffold server

# Server Configuration
MCP_LOG_LEVEL=INFO
MCP_MAX_CONCURRENT_REQUESTS=10

# Web Interaction
MCP_WEB_ENABLED=true
MCP_BROWSER_HEADLESS=false

# Computer Interaction
MCP_COMPUTER_ENABLED=true

# Debug Mode
MCP_DEBUG_MODE=false

# Computer Interaction Settings
COMPUTER_SCREENSHOT_QUALITY=90
COMPUTER_MOUSE_DURATION=0.5
COMPUTER_TYPING_INTERVAL=0.05
COMPUTER_ENABLE_FAILSAFE=true
COMPUTER_COMMAND_TIMEOUT=30.0

# Browser Settings (via MCP_ prefix)
MCP_BROWSER_WIDTH=1280
MCP_BROWSER_HEIGHT=800
MCP_BROWSER_TIMEOUT=30000
MCP_BROWSER_MAX_TABS=8

# Vision Settings
COMPUTER_OCR_LANGUAGE=eng
COMPUTER_TEMPLATE_THRESHOLD=0.8

# Safety Settings
COMPUTER_MAX_OPERATION_TIME=300.0
